<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragment.SettingsFragment"
    android:background="#fff">

    <TextView
        android:id="@+id/settings_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:background="@color/colorPrimary"
        android:paddingTop="10dp"
        android:text="Settings"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/account_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Account"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/profile_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Profile"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/rules_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Rules"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/activity_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Activities"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/support_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Support"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tips_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Tips"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/energy_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Energy consumption"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/garbage_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="50dp"
        android:paddingTop="10dp"
        android:text="Garbage management"
        android:textSize="20dp"/>

</LinearLayout>