<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.NewRuleFragment"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:id="@+id/new_rule_option"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="New rule"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:background="@color/colorPrimary"
        ></TextView>
    <EditText
        android:id="@+id/rule_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_device_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#C4008020"
            android:paddingTop="25dp"
            android:text="Add devices"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingBottom="50dp"></TextView>

        <TextView
            android:id="@+id/timer_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="25dp"
            android:text="Timer"
            android:textSize="25dp"
            android:paddingBottom="50dp">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_new_device"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:text="Add device">

        </TextView>
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_plus_24">

        </ImageView>
    </LinearLayout>
    <ListView
        android:id="@+id/added_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>